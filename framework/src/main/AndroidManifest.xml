<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="site.ken.framework">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:required ="false"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"      android:required ="false" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"     android:required ="false" />
    <uses-permission android:name="android.permission.VIBRATE"     android:required ="false" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD"     android:required ="false" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"     android:required ="false" />
    <uses-permission android:name="android.permission.WAKE_LOCK"     android:required ="false" />
    <uses-permission android:name="com.android.vending.CHECK_LICENSE"     android:required ="false" />
    <uses-permission android:name="android.permission.INTERNET"     android:required ="false" />

    Â <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"      android:required ="false"
    tools:ignore="ProtectedPermissions" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/AppTheme"
        tools:ignore="UnusedAttribute">

        <activity
            android:name="site.ken.framework.ui.SplashActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="site.ken.framework.ui.gamegallery.SlotSelectionActivity" />
        <activity android:name="site.ken.framework.ui.gamegallery.GalleryActivity" />
        <activity android:name="site.ken.framework.ui.gamegallery.BaseGameGalleryActivity" />

        <activity
            android:name="site.ken.framework.ui.preferences.GamePreferenceActivity"
            android:label="@string/game_pref"
            android:theme="@style/PrefTheme" />

        <activity
            android:name="site.ken.framework.ui.cheats.CheatsActivity"
            android:label="Cheats" />

        <activity android:name="site.ken.framework.base.OpenGLTestActivity" />

        <activity
            android:name="site.ken.framework.ui.preferences.AboutActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="site.ken.framework.base.RestarterActivity"
            android:configChanges="orientation|screenSize"
            android:process=":restarter" />


    </application>

</manifest>
